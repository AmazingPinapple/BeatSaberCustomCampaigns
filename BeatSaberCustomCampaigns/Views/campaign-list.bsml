<bg>
  <vertical>
    <page-button click-event='list#PageUp' direction='Up' pref-width='30'></page-button>
    <list id='list' select-cell='campaign-click' expand-cell='true'></list>
    <page-button click-event='list#PageDown' direction='Down' pref-width='30'></page-button>
  </vertical>
  <horizontal anchor-pos-x='-30' anchor-pos-y='-35' horizontal-fit='PreferredSize'>
    <clickable-text text='Download More' hover-hint='This will open in your browser' on-click='download-click'></clickable-text>
  </horizontal>
</bg>